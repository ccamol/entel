package com.epcs.bean;

import java.io.Serializable;

/**
 * Bean para representar una ciudad de Chile
 * 
 * @author jlopez (I2B) en nombre de Absalon Opazo (Atencion al Cliente,
 *         EntelPcs)
 * 
 */
public class CiudadBean extends CodeDescBean implements Serializable {

    /**
     * @param codigo
     * @param descripcion
     */
    public CiudadBean(String codigo, String descripcion) {
        super(codigo, descripcion);
    }

    /**
     * 
     */
    private static final long serialVersionUID = 1L;

    /**
     * Entrega una instancia de {@link CiudadBean} en blanco para propositos
     * null-safe en otras clases y metodos
     * 
     * @return {@link CiudadBean}
     */
    public static CiudadBean emptyBean() {
        return new CiudadBean("", "");
    }

}
