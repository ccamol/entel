<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_margin="10dp"
        android:src="@drawable/logo_entel_menu"
        android:layout_width="35dp"
        android:layout_height="26dp"
        android:id="@+id/imageView"
        android:layout_gravity="center_horizontal" />

    <RelativeLayout
        android:id="@+id/user_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/personal_data_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/header_divider"
                android:layout_alignParentTop="true"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/menu_divider" />

            <cl.entel.appswlsdesa.view.EntelTextView
                android:layout_toEndOf="@id/header_divider"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/entel_orange"
                android:textSize="33sp"
                android:text="{"
                android:id="@+id/textView"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="4dp" />

            <cl.entel.appswlsdesa.view.EntelTextView
                android:lines="1"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:id="@+id/txt_name"
                android:textColor="@color/menu_header_txt"
                android:layout_toRightOf="@+id/textView"
                android:layout_alignTop="@+id/textView"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp" />

            <cl.entel.appswlsdesa.view.EntelTextView
                android:textColor="@color/menu_header_txt"
                android:lines="1"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:textSize="13sp"
                android:layout_height="wrap_content"
                android:text="@string/owner_label"
                android:id="@+id/txt_owner_label"
                android:textStyle="bold"
                android:layout_below="@+id/txt_name"
                android:layout_toRightOf="@+id/textView"
                android:layout_toEndOf="@+id/textView"
                android:layout_marginRight="4dp" />

            <cl.entel.appswlsdesa.view.EntelTextView
                android:textColor="@color/menu_header_txt"
                android:lines="1"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:id="@+id/txt_owner"
                android:layout_toRightOf="@+id/txt_owner_label"
                android:layout_alignBaseline="@id/txt_owner_label"
                android:layout_marginRight="10dp" />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/logout_layout"
            android:gravity="right|center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/personal_data_view"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">


            <ImageView
                android:layout_marginBottom="1dp"
                android:src="@drawable/ic_logout"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:id="@+id/imageView2" />

            <cl.entel.appswlsdesa.view.EntelTextView
                android:gravity="center_vertical"
                android:textColor="@color/logout_btn"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="@string/logout_btn"
                android:id="@+id/btn_logout"
                android:clickable="true"
                android:paddingLeft="8dp"
                android:paddingRight="25dp" />

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>